<%- include('../partials/_header') %>
<link rel="stylesheet" href="/stylesheets/projects.css"/>
<main>
    <div class="container">
        <div class="main-body">
            <div class="row g-3">
                <div class="col-md-12">
                    <div class="card shadow-sm mt-3">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <h1>PROJECTS</h1>
                            </div>
                        </div>
                    </div>
                </div>
                <% for (project of projects) { %>
                    <div class="col-md-3">
                        <div class="card">
                            <a href="/projects/<%= project._id %>" class="card-link card-img-a ratio ratio-1x1">
                                <img class="card-img-top card-img" src="/images/projects/<%= project.details.media[0] %>" alt="">
                            </a>
                            <div class="card-body">
                                <h6 class="card-title text-truncate fs-5 my-0"><%= project.details.projectName %></h5>
                                <div class="row g-0">
                                    <div class="col-md-12 d-flex justify-content-between">
                                        <a href="/users/<%= project.details.authorId %>" class="card-text text-muted text-truncate card-artist"><%= project.details.authorName %></a>
                                        <div>
                                            <a href="/genres/<%= project.details.genres[0] %>" class="card-text text-muted text-truncate card-genre"><%= project.details.genres[0] %></a>
                                            <a href="/genres/<%= project.details.genres[1] %>" class="card-text text-muted text-truncate card-genre"><%= project.details.genres[1] %></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</main>
<%- include('../partials/_footer') %>