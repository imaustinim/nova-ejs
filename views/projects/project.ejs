<%- include('../partials/_header') %>
<link rel="stylesheet" href="/stylesheets/projects/project.css"/>
<link rel="stylesheet" href="<%= stylesheet %>"/>
<main>
    <div class="container">
        <div class="main-body">
            <div class="row g-3">
                <div class="col-md-12">
                    <div class="card shadow-sm py-5 mt-3">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <h1>BANNER PHOTO</h1>
                            </div>
                        </div>
                        <div class="position-absolute bottom-0 end-0 edit">
                            <button type="button" class="btn btn-light m-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                    class="bi bi-camera" viewBox="0 0 18 19">
                                    <path
                                        d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1v6zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2z" />
                                    <path
                                        d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5zm0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7zM3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                                </svg>&nbsp;Edit Cover Photo
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm mb-3">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <a href="" class="card-link card-img-a ratio ratio-1x1">
                                    <img src="/images/projects/<%= project.details.media[0] %>" alt="Project thumbnail" class="card-img-top card-img rounded-circle">
                                </a>
                                <div class="mt-3">
                                    <h4><%= project.details.projectName %></h4>
                                    <a class="h6"><%= project.details.authorName %></a>
                                    <p class="text-secondary my-1">Genres: <%= project.details.genres.join(", ") %></p>
                                    <div class="mt-3">
                                        <button class="btn btn-primary">Follow</button>
                                        <button class="btn btn-outline-primary">Message Author</button>
                                    </div>
                                </div>
                                <div class="position-absolute top-0 end-0 edit">
                                    <a type="button" href="/projects/<%= project._id %>/edit" class="btn btn-light m-3" role="button">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-camera" viewBox="0 0 18 19">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                    </svg>&nbsp;Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card shadow-sm mb-3">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <div class="mt-3">
                                    <h4>Details</h4>
                                    <p class="text-secondary mb-1">Capital Raised: $<%= project.contract.capitalRaised.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %></p>
                                    <p class="text-secondary mb-1">Capital Required: $<%= project.contract.capitalRequired.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %></p>
                                    <p class="text-secondary mb-1">Release Date: <%= project.details.releaseDate.toISOString().split('T')[0] %></p>
                                    <div class="mt-3">
                                        <button class="btn btn-primary <%= investStatus %>">Invest</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card shadow-sm mb-3 video">
                        <div class="ratio ratio-16x9">
                            <iframe class="embed-responsive-item" src="<%= project.details.videoUrl %>" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    </div>
                    <div class="card shadow-sm mb-3">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-left">
                                <div>
                                    <p class="text-secondary mb-1"><%= project.details.description %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include('../partials/_footer') %>